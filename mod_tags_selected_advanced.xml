					type="integer"
					default="5"
					first="1"
					last="100"
					step="1"
					class="span1"
					label="MOD_TAGS_SELECTED_ADVANCED_MAX_LABEL"
					description="MOD_TAGS_SELECTED_ADVANCED_MAX_DESC">
				</field>

				<field type="list" name="tag_matches" label="Tags matching" description="" default="false" class="span3">
